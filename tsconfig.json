{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": false, 
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["es2017"],                            
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "rootDir": "./",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
